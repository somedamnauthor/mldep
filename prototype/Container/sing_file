Bootstrap: docker
From: python:3.8-buster

%post
    # Install system dependencies
    apt-get update -y
    apt-get install -y python3-pip make automake gcc g++

    # Install required Python packages
    pip3 install flask
    pip3 install torch --find-links https://download.pytorch.org/whl/torch_stable.html
    pip3 install torchvision --find-links https://download.pytorch.org/whl/torch_stable.html
    pip3 install Pillow
    pip3 install flask_restful

%files
    # Copy the contents of the current directory into the container at /home/ml
    /path/to/your/local/directory /home/ml

%environment
    # Set environment variables if needed

%runscript
    # Define the command to be executed when the container is run
    python3 /home/ml/wrapper.py
